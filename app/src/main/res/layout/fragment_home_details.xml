<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.text.Html" />

        <variable
            name="item"
            type="kz.digitalart.app.domain.model.Exhibit" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <kz.digitalart.app.ui.custom_views.carousel.CarouselSlider
                android:id="@+id/carousel_slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@{item.name}"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textSize="21sp"
                android:textColor="@color/color_363636"
                tools:text="Давид" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@{item.year}"
                    android:textColor="@color/color_363636"
                    tools:text="12-12-19" />

                <TextView
                    android:id="@+id/tv_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@{item.author}"
                    android:textColor="@color/color_363636"
                    android:textSize="15sp"
                    tools:text="author" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="15dp"
                android:background="@color/color_C0C0C0" />

            <kz.digitalart.app.ui.custom_views.AudioPlayer
                android:id="@+id/audio_player"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:set_url="@{item.audio}" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@{Html.fromHtml(item.description)}"
                android:textColor="#424242"
                android:textSize="15sp"
                tools:text="description" />

        </LinearLayout>
    </ScrollView>
</layout>